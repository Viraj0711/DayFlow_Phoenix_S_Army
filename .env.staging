# =================================
# STAGING ENVIRONMENT VARIABLES
# =================================
# For staging server deployment

# Application
NODE_ENV=staging
PORT=5000
FRONTEND_PORT=3000

# Database Configuration
DB_HOST=staging-db.internal
DB_PORT=5432
DB_NAME=hrms_staging
DB_USER=hrms_staging_user
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# JWT Configuration
JWT_SECRET=GENERATE_STRONG_SECRET_KEY_HERE
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Email Configuration
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASSWORD=YOUR_SENDGRID_API_KEY
EMAIL_FROM=noreply@staging.dayflow.com

# Redis
REDIS_HOST=staging-redis.internal
REDIS_PORT=6379
REDIS_PASSWORD=REDIS_SECURE_PASSWORD

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/hrms/uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# API Configuration
API_URL=https://api-staging.dayflow.com
REACT_APP_API_URL=https://api-staging.dayflow.com

# CORS Configuration
CORS_ORIGIN=https://staging.dayflow.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/hrms/app.log

# Session Configuration
SESSION_SECRET=GENERATE_STRONG_SESSION_SECRET
SESSION_EXPIRE=86400000

# OAuth
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GOOGLE_CALLBACK_URL=https://api-staging.dayflow.com/auth/google/callback

# Cloud Storage
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=us-east-1
AWS_S3_BUCKET=hrms-staging-uploads

# Monitoring & Analytics
SENTRY_DSN=YOUR_SENTRY_DSN_STAGING
GOOGLE_ANALYTICS_ID=

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false

# Development Tools
DEBUG=false
MOCK_EMAIL=false
