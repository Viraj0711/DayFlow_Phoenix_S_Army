# =================================
# PRODUCTION ENVIRONMENT VARIABLES
# =================================
# For production server deployment
# IMPORTANT: Never commit actual secrets to git!

# Application
NODE_ENV=production
PORT=5000
FRONTEND_PORT=3000

# Database Configuration
DB_HOST=prod-db.internal
DB_PORT=5432
DB_NAME=hrms_production
DB_USER=hrms_prod_user
DB_PASSWORD=USE_STRONG_PASSWORD_FROM_SECRETS_MANAGER

# JWT Configuration
JWT_SECRET=USE_CRYPTOGRAPHICALLY_SECURE_SECRET
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Email Configuration
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASSWORD=USE_SENDGRID_API_KEY_FROM_SECRETS
EMAIL_FROM=noreply@dayflow.com

# Redis
REDIS_HOST=prod-redis.internal
REDIS_PORT=6379
REDIS_PASSWORD=USE_REDIS_PASSWORD_FROM_SECRETS

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/hrms/uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# API Configuration
API_URL=https://api.dayflow.com
REACT_APP_API_URL=https://api.dayflow.com

# CORS Configuration
CORS_ORIGIN=https://dayflow.com,https://www.dayflow.com

# Rate Limiting (more strict for production)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=50

# Logging
LOG_LEVEL=warn
LOG_FILE=/var/log/hrms/app.log

# Session Configuration
SESSION_SECRET=USE_SESSION_SECRET_FROM_SECRETS_MANAGER
SESSION_EXPIRE=86400000

# OAuth
GOOGLE_CLIENT_ID=PRODUCTION_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=USE_FROM_SECRETS_MANAGER
GOOGLE_CALLBACK_URL=https://api.dayflow.com/auth/google/callback

# Cloud Storage
AWS_ACCESS_KEY_ID=USE_IAM_ROLE_OR_SECRETS_MANAGER
AWS_SECRET_ACCESS_KEY=USE_IAM_ROLE_OR_SECRETS_MANAGER
AWS_REGION=us-east-1
AWS_S3_BUCKET=hrms-production-uploads

# Monitoring & Analytics
SENTRY_DSN=YOUR_PRODUCTION_SENTRY_DSN
GOOGLE_ANALYTICS_ID=YOUR_GA_ID

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=true

# Development Tools
DEBUG=false
MOCK_EMAIL=false

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/dayflow.crt
SSL_KEY_PATH=/etc/ssl/private/dayflow.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
