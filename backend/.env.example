# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=5000
NODE_ENV=development
HOST=0.0.0.0

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL with raw pg driver)
# ============================================================================
# Database connection details
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=dayflow_hrms

# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=10000

# SSL mode (disable for local, require for production)
DB_SSL=false

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
# Generate a strong secret: openssl rand -base64 64
JWT_SECRET=change_this_to_a_long_random_string_in_production_min_32_chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================================================
# SECURITY & CORS
# ============================================================================
# Comma-separated list of allowed origins (* for all in dev only)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Bcrypt rounds (higher = more secure but slower, 10-12 recommended)
BCRYPT_ROUNDS=10

# ============================================================================
# EMAIL CONFIGURATION (for password reset, notifications)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@dayflow.com
SMTP_FROM_NAME=DayFlow HRMS

# ============================================================================
# FILE UPLOAD
# ============================================================================
UPLOAD_MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/jpg,application/pdf
UPLOAD_PATH=./uploads

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_FILES=14d

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=DayFlow HRMS
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Pagination defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
